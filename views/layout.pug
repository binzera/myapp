doctype html
html
  head
    title= title
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-success
      .container-fluid
        a.navbar-brand(href="/") Sistema de Gestão
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          if user
            ul.navbar-nav.me-auto
              li.nav-item
                a.nav-link(href="/despesas") Despesas
              li.nav-item
                a.nav-link(href="/comercio_animais") Comércio de Animais
              li.nav-item.dropdown
                a.nav-link.dropdown-toggle(href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false")
                  | Cadastros Básicos
                ul.dropdown-menu(aria-labelledby="navbarDropdown")
                  li
                    a.dropdown-item(href="/pessoas") Pessoas
                  li
                    a.dropdown-item(href="/categorias") Categorias
              li.nav-item.dropdown
                a.nav-link.dropdown-toggle(href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false")
                  | Relatórios
                ul.dropdown-menu(aria-labelledby="navbarDropdown")
                  li
                    a.dropdown-item(href="/relatorios/despesas-por-categoria") Despesas por Categoria
                  li
                    a.dropdown-item(href="/relatorios/vendas-por-vendedor") Vendas
          ul.navbar-nav.ms-auto
            if !user
              li.nav-item
                a.nav-link(href="/auth/login") Entrar
            else
              li.nav-item
                span.nav-link.text-white Olá, #{user.username}
              li.nav-item
                a.nav-link(href="/auth/logout") Sair
    block content
    
