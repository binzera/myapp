extends ../layout

block content
  .container.mt-5
    h1 Lista de Pessoas
    table.table.table-striped.table-hover
      thead
        tr
          th Nome
          th Tipo
          th.text-center Ações
      tbody
        each pessoa in pessoas
          tr
            td= pessoa.get('nome')
            td= pessoa.get('tipo')
            td.text-center
              a.badge.bg-warning.text-dark(href=`/pessoas/${pessoa.id}/edit`, style="margin-right: 5px; cursor:pointer;")
                i.bi.bi-pencil
              form(action=`/pessoas/${pessoa.id}/delete` method="POST" style="display:inline;")
                button.badge.bg-danger(type="submit", style="border:none; cursor:pointer;")
                  i.bi.bi-trash
    a.btn.btn-secondary(href="/") Voltar
    a.btn.btn-primary(href="/pessoas/add") Adicionar
